<div class="container">
    
    <%= link_to @topic, class: "internal-nav" do %>
        <i class="fa fa-arrow-left"></i>
        Cancel
    <% end %>
    
    <div class="form-container">
        <div class="col-md-8 col-md-offset-2">
            <%= simple_form_for([@topic, @subtopic], html: { class: 'form-horizontal'}) do |f| %>
                <%= f.input :name, label: false, error: "Enter subtopic name", placeholder: "Subtopic Name" %>
                <%= f.input :description, label: false, placeholder: "Subtopic Description (Optional)" %>
                <%= f.button :submit, class: "btn btn-success btn-lg btn-block" %>
            <% end %>
        </div>
    </div>
    
</div>