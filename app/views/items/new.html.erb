<div class="container">
    
    <%= link_to @subtopic, class: "internal-nav" do %>
        <i class="fa fa-arrow-left"></i>
        Cancel
    <% end %>
    
    <div class="form-container">
        <div class="col-md-8 col-md-offset 2">
            <%= simple_form_for([@subtopic, @item], html: { class: "form-horizontal"}) do |f| %>
                <%= f.input :name, label: false, error: "Enter item name", placeholder: "Item Name" %>
                <%= f.input :url, label: false, placeholder: "Item URL (Optional)" %>
                <%= f.input :description, label: false, placeholder: "Item Description (Optional)" %>
                <%= f.button :submit, class: "btn btn-success btn-lg btn-block" %>
            <% end %>
        </div>
    </div>
</div>